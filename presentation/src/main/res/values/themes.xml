<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Naeggeodo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorOnPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="font_bold_26">
        <item name="android:fontFamily">@font/spoqahansansneo_bold</item>
        <item name="android:textSize">26sp</item>
        <!--        <item name="android:fontWeight">400</item>-->
    </style>

    <style name="font_bold_17">
        <item name="android:fontFamily">@font/spoqahansansneo_medium</item>
        <item name="android:textSize">17sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="font_bold_15">
        <item name="android:fontFamily">@font/spoqahansansneo_bold</item>
        <item name="android:textSize">26sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="font_regular">
        <item name="android:fontFamily">@font/spoqahansansneo_regular</item>
        <item name="android:textSize">17sp</item>
    </style>
</resources>